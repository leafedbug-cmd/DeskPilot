{
  "manifest_version": 3,
  "name": "DeskPilot",
  "version": "1.0.0",
  "description": "Your Keyboard-First Web Co-Pilot",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "history",
    "bookmarks"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "common/commands.js",
        "common/storage.js",
        "content/scroller.js",
        "content/hinter.js",
        "content/content_script.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "DeskPilot - Keyboard Navigation"
  },
  "options_page": "options/options.html"
}